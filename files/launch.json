{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach to remote",
            "type": "node",
            "request": "attach",
            "port": 9229,
            "address": "your-target-ip",
            "protocol": "inspector",
            "localRoot": "${workspaceFolder}",
            "remoteRoot": "/usr/lib/arigo/rumo/current",
            "skipFiles": [
                 "<node_internals>/**/*.js",
                 "<eval>/*",
                 "node_modules/**/*.js",
                 "usr/lib/**/lib/*.js"
            ]
        }
    ]
}
